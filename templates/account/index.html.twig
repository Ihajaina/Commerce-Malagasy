{% extends 'base.html.twig' %}
{% block stylesheet %}
<link rel="stylesheet" href="{{asset('assets/css/bootstrap.min.css')}}">

{% endblock %}
{% block title %}Mon compte - Commerce Malagasy{% endblock %}

{% block content %}
<style>
button {
    background-color: lightgrey;
    border: 1px solid white; 
    border-radius: 3px;
    font-size: 14px;
    color: blue; 
    padding: 0; 
    cursor: pointer; 
    height: 40px;
    width:300px;
}
button:hover{
    color:grey;
}
</style>
    <h1>Mon compte</h1>
         {% if is_granted('ROLE_ADMIN') %}
            <small><a href="/admin"></a><button>Se connecter en tant qu'administrateur ?</button></small><br/>
        {% endif %}

    Bienvenue {{ app.user.firstname }} dans votre compte.<br/>
     C'est dans cet espace que vous allez pouvoir gérer toutes vos informations personnelles.
     <hr>
     <div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/password.png') }}" alt="Modifier mon mot de passe"><br/>
                 <a href="{{ path('account_password') }}">Modifier mon mot de passe</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/address.png') }}" alt="Gérer mes adresses"><br/>
                 <a href="{{ path('account_address') }}">Gérer mes adresses</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/order.png') }}" alt="Mes commandes"><br/>
                 <a href="{{ path('account_order') }}">Mes commandes</a>
            </div>
        </div>
     </div>
{% endblock %}
