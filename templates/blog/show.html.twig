{% extends 'base.html.twig' %}
{% block stylesheet %}
<link rel="stylesheet" href="{{asset('assets/css/bootstrap.min.css')}}">
{% endblock %}
{% block content %}

<div class="container">
<h1 class="title p-1">{{ article.title }}</h1>
    <div class="img-fluid">
        <img width="100%" src="/uploads/articles/{{ article.image }}" alt="{{ article.title }}">
    </div>
    <div class="content">
        <p class="date">Ecrit le : {{ article.createdAt|date('d/m/Y') }} à {{ article.createdAt|date('H:i') }} 
        par <span class="author"> {{ article.user }} </span></p>
        <h2 class="title"> {{ article.title }} </h2>
        <p  class="content text-justify">{{ article.content | raw}}</p>
    </div>
        <a href="{{ path('home') }}" class="btn btn-info" style="text-decoration:none">Retour à l'accueil</a>
</div>
{% endblock %}